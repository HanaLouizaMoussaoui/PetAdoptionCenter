<Window x:Class="ProjectWPF.Views.ShowAdoptees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF.Views"
        mc:Ignorable="d"
        Title="ShowAdoptees" Height="450" Width="800">
    
    <Grid>
      
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="2" Grid.Column="0" >
            <TextBlock Text="Our adoptees!" TextAlignment="Center" FontSize="30" Foreground="#FFADE0BB" Margin="0,10,0,0"></TextBlock>
            <TextBlock Text="These are just a few of the many people who rescued pets from our center. Be the next one! " TextAlignment="Center" FontSize="15" ></TextBlock>
        </StackPanel>
       
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="10">
            <TextBlock x:Name="adoptee1Name" HorizontalAlignment="Center" TextAlignment="Center"  Height="70px" Width="200px" Margin="0,70,0,0" FontSize="25"/>
            <TextBlock x:Name="adoptee1Pets" HorizontalAlignment="Center" TextAlignment="Center"  Height="70px" Width="200px" Margin="0,5,0,0" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="10">
            <TextBlock x:Name="adoptee2Name" HorizontalAlignment="Center" TextAlignment="Center"  Height="70px" Width="200px" Margin="0,70,0,0" FontSize="25"/>
            <TextBlock x:Name="adoptee2Pets" HorizontalAlignment="Center" TextAlignment="Center"  Height="70px" Width="200px" Margin="0,5,0,0" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="10">
            <TextBlock x:Name="adoptee3Name" HorizontalAlignment="Center" TextAlignment="Center" Height="70px" Width="200px" Margin="0,10,0,0" FontSize="25"/>
            <TextBlock x:Name="adoptee3Pets" HorizontalAlignment="Center" TextAlignment="Center"  Height="70px" Width="200px" Margin="0,5,0,0" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="10">
            <TextBlock x:Name="adoptee4Name" HorizontalAlignment="Center" TextAlignment="Center"  Height="70px" Width="200px" Margin="0,10,0,0" FontSize="25"/>
            <TextBlock x:Name="adoptee4Pets" HorizontalAlignment="Center" TextAlignment="Center"  Height="70px" Width="200px" Margin="0,5,0,0" FontSize="20"/>
        </StackPanel>

    </Grid>
</Window>
